@model List<ResultProductDto>

<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori ilanları</h3>
            </div>

            <div class="row pt-md-5 pt-4">
                @*  @foreach (var x in Model.Take(6)) *@
                @foreach (var x in Model.Where(x => x.dealOfTheDay == true))
                {
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="property-single.html">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@x.type</span><span>@x.categoryName</span></div>
                                <img class="img-fluid" style="height:200px; width:700px;" src="@x.coverimage" alt="">
                                <div class="box-content">
                                    <h3 class="title">₺ @x.price</h3>
                                    <span class="post">@x.address @x.district - @x.city </span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <br />
                }


            </div>
        </div>
    </div>
</section>