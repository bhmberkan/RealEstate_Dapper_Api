@model List<ResultAboutUsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama 1</th>
                                <th scope="col">Açıklama 2</th>
                                <th scope="col">Görsel (URL)</th>
                                <th scope="col">Video Başlığı</th>
                                <th scope="col">Video (URL)</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                             
                                <tr>
                                    <th scope="row">@item.AboutUsId</th>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td>@item.Image</td>
                                    <td>@item.VideoTitle</td>
                                    <td>@item.VideoUrl</td>
                                    <td><a href="/AboutUsAdmin/DeleteAboutUs/@item.AboutUsId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AboutUsAdmin/UpdateAboutUs/@item.AboutUsId" class="btn btn-outline-success">Güncelle</a></td>


                                </tr>
                            }
                        </tbody>
                    </table>
                  @*   <a href="/AboutUsAdmin/CreateAboutUs/" class="btn btn-outline-info">Hakkımızda Alanı Girişi</a> *@
                 @*  Alanda sadece bir değer olacağı için güncelleme işlemi üzerinden yürüyeceğim. *@
                </div>
            </div>
        </div>
    </div>
</div>


