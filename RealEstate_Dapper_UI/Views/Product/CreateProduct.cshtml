@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>

                <form method="post">
                    <label>İlan Başlığı</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />

                    <label>Şehir</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />

                    <label>İlçe</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />

                    <label>Kategori</label>
                    <br />
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryValues,new{@class="form-control"})
                    <br />

                    <label>Fiyat</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />

                    <label>Tür</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />

                    <label>Kapak Fotografı</label>
                    <br />
                    <input type="text" asp-for="title" class="form-control">
                    <br />


                    <label>İlan Açık Adresi</label>
                    <br />
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />

                    <button class="btn btn-primary">İlanı Kayet</button>

                </form>

            </div>
        </div>
    </div>
</div>

