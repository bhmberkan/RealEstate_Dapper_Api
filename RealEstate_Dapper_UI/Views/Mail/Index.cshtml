@model IPagedList<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}



<link href="~/css/paging.css" rel="stylesheet" />

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Mail Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                               
                                <th scope="col">Subject</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Subject</td>
                                    <td>@item.SendDate.ToString("dd-MMM-yyyy")</td>
                                    <td><a href="/Mail/DeleteMail/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Mail/DetailMail/@item.ContactID" class="btn btn-outline-success">Detay</a></td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
               
                </div>
            </div>
        </div>
    </div>
</div>

