                        <select class="btn btn-default" name="propertyCategoryId" required>
                            <option selected="">Rol</option>
                          
                            
                                <option value="@Model.">@Model.UserRole</option>
                            
                        </select>
                    </span> *@

                    <label>Rol </label>
                    <br />
                    <input type="email" asp-for="UserRole" class="form-control">
                    <br />


                    <label>Foto(URL) </label>
                    <br />
                    <input type="tel" asp-for="UserImageUrl" class="form-control">
                    <br />

                    <button class="btn btn-primary">Kullanıcıyı Güncelle</button>

                </form>

            </div>
        </div>
    </div>
</div>
